//–í—ã—á–∏—Å–ª–∏—Ç—å –∑–Ω–∞—á–µ–Ω–∏–µ –≤—ã—Ä–∞–∂–µ–Ω–∏—è –ø–æ —Ñ–æ—Ä–º—É–ª–µ (–≤—Å–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –ø—Ä–∏–Ω–∏–º–∞—é—Ç –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è):
ùëê + ‚àöùëê 2 + 4ùëèùëë
2ùëè
‚àí ùëè 3 ùëë + ùëê ‚àí2
import java.util.Scanner;

public class LogicalOpTable {
    public static void main(String[] args)
    {
        System.out.println("–í—ã—á–∏—Å–ª—è–µ–º –≤—ã—Ä–∞–∂–µ–Ω–∏–µ");
        System.out.println("–ù–∞—á–∏–Ω–∞–µ–º —Å –≤–≤–æ–¥–∞ –∑–Ω–∞—á–µ–Ω–∏–π –∞, b, c");
        System.out.println("–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ –∞");

        Scanner console = new Scanner(System.in);

        while (!(console.hasNextDouble()))
        { System.out.println("–í—ã –≤–≤–µ–ª–∏ –Ω–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ");
            console.next();
        }
        double a = console.nextDouble();
        System.out.println("–ó–Ω–∞—á–µ–Ω–∏–µ –∞ = " + a);

        while (!(console.hasNextDouble()))
        { System.out.println("–í—ã –≤–≤–µ–ª–∏ –Ω–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ");
            console.next();
        }
        double b = console.nextDouble();
        System.out.println("–ó–Ω–∞—á–µ–Ω–∏–µ b = " + b);

        while (!(console.hasNextDouble()))
        { System.out.println("–í—ã –≤–≤–µ–ª–∏ –Ω–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ");
            console.next();
        }
        double c = console.nextDouble();
        System.out.println("–ó–Ω–∞—á–µ–Ω–∏–µ c = " + c);

        double z =( (b + Math.sqrt(b*b + 4*a*c)) / (2*a) - (Math.pow(a,3)*c) + (Math.pow(b,-2)));
        System.out.println("–ó–Ω–∞—á–µ–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–∏ z = " + String.format ("%f", z));
    }
}
